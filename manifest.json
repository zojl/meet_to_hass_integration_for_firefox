{
  "manifest_version": 3,
  "name": "Meet to HASS integration",
  "version": "1.0.1",
  "description": "Let your smart home know when you're in a meeting â€” this extension tracks active Google Meet calls in your browser and sends real-time updates to Home Assistant.",
  "icons" : {
    "16": "icons/icon_16.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "action": {
    "default_icon" : {
      "16": "icons/icon_16.png",
      "48": "icons/icon_48.png",
      "128": "icons/icon_128.png"
    }
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://meet.google.com/*",
    "*://*/api/states/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "meet_to_hass_integration@zojl.dev",
      "strict_min_version": "137.0"
    }
  }
}
